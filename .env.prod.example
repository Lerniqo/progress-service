# Production Environment Configuration
# Copy this file to .env.prod and fill in the actual values

# Application Configuration
NODE_ENV=production
APP_PORT=3000
LOG_LEVEL=info

# MongoDB Configuration (External - AWS DocumentDB, MongoDB Atlas, etc.)
MONGODB_URI=mongodb://username:password@your-mongodb-host:27017/progress_service_prod?authSource=admin

# For AWS DocumentDB
# MONGODB_URI=mongodb://username:password@your-cluster.cluster-xxxxxx.us-east-1.docdb.amazonaws.com:27017/progress_service_prod?ssl=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false

# For MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net/progress_service_prod?retryWrites=true&w=majority

# Docker Image Configuration
IMAGE_TAG=latest

# Security
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=30000

# Monitoring & Logging
LOG_RETENTION_DAYS=30
METRICS_PORT=9090
